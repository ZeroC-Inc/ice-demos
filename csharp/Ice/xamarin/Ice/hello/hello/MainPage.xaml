<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:hello"
             x:Class="hello.MainPage">

    <StackLayout Margin="10,40,10,10" Padding="10">

        <Label Text="Hostname"/>
        <Entry x:Name="Hostname" Text="127.0.0.1"/>
        <Label Text="Mode"/>
        <Picker x:Name="Mode"/>
        <Label Text="Timeout"/>
        <Slider x:Name="Timeout" Maximum="5000"/>
        <Label Text="Delay" />
        <Slider x:Name="Delay" Maximum="5000"/>
        <Button x:Name="Hello" Text="Hello World!"/>
        <Button x:Name="Shutdown" Text="Shutdown" />
        <Button x:Name="Flush" Text="Flush" IsEnabled="False"/>
        <Label x:Name="Status" Text="Ready" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
